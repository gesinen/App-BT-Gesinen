<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/colorGris2"
        android:layout_height="match_parent"
        tools:context=".GenericFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.mcuhq.simplebluetooth.GenericActivity">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="LAZOS PARKING"
                android:textSize="35dp"
                android:textStyle="bold|italic"
                tools:visibility="visible" />

            <Button
                android:id="@+id/buttonGetInfoLazos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="GET INFO" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="CURRENT VALUE:"
                android:textSize="17dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="C1:"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/c1setCurrentText"
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:hint="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="C2:"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/c2setCurrentText"
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:hint="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="C12:"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/c12setCurrentText"
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:hint="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="C21:"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/c21setCurrentText"
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:hint="" />


            </LinearLayout>

            <TextView
                android:id="@+id/textViewCurrentValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/rojo"
                />
            <Button
                android:id="@+id/setCurrentButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:text="ENVIAR" />


            <Button
                    android:id="@+id/setResetButton"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:text="RESET VALUE" />





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="GET_MAX_VALUE:"
                android:textSize="17dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL:"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/GetMaxValueView"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp" />

                <Button
                    android:id="@+id/getMaxValueButton"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="OBTENER"
                    android:gravity="center"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="SET_MAX_VALUE:"
                android:textSize="17dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL:"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/setMaxValueView"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp" />

                <Button
                    android:id="@+id/setMaxvalueButton"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="ENVIAR"
                    android:gravity="center"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</FrameLayout>


