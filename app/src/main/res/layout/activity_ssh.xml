<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGris2"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGris2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGris2"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-154dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:text="SSH CONNECTION"
            android:textColor="@color/azul900"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="IP:"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/IpField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:hint="IP"
            android:text="192.168.230.1"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="USERNAME:"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/UsernameField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:text="pi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="PASSWORD:"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/PasswordField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:text="Gesinen2110" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="PORT:"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/PortField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:hint="@string/port"
            android:text="22"
            android:inputType="number" />


        <Button
            android:id="@+id/ButtonCrearConexion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_black_rounded"
            android:hint="CREAR CONEXIÃ“N"
            android:textStyle="bold"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_weight="0.1"
            android:ellipsize="end"
            android:text="TERMINAL:"
            android:textStyle="bold"
            android:textSize="15dp"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/black"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/sshTextView"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_marginRight="10dp" />
        </ScrollView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="COMANDO:"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/CommandField"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:ems="20"
            android:hint="Comando"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/ButtonComando"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_black_rounded"
            android:hint="ENVIAR COMANDO"
            android:textStyle="bold"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/decoder5000Button"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_black_rounded"
                android:hint="DECODER 5000" />

            <Button
                android:id="@+id/chirpstack8080Button"
                android:layout_width="120dp"
                android:layout_height="50dp"
               android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/button_black_rounded"
                android:hint="CHIRPSTACK 8080" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>